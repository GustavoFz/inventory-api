{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es6",
      "esnext"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/@types"
    ]
  }
}